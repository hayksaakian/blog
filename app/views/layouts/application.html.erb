<!DOCTYPE html>
<html>
<head>
  <title>Snazzy Test Site</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= favicon_link_tag %>
  <%= csrf_meta_tags %>
  <h1><%= link_to_unless_current('Snazzy Test Site',       {:action => 'index'}) %></h1>
</head>
<body>
	<div id="user_nav">
	  <% if current_user %>
	    Logged in as <%= current_user.email %>.
	    <%= link_to "My Dealerships", dealers_path %>
	    <%= link_to "Log out", log_out_path %>
	  <% else %>
	    <%= link_to "Sign up", sign_up_path %> (remove that)
	    <%= link_to "log in", log_in_path %>
	  <% end %>
	</div>

	<% flash.each do |name, msg| %>
	  <%= content_tag :div, msg, :id => "flash_#{name}" %>
	<% end %>
	<%= yield %>

</body>
</html>
